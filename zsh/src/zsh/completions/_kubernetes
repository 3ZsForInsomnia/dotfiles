#compdef view_kpod_logs get_latest_version_row view_kpod_log_latest getKDepls delKDepl findAndDelKDepl getKPodStatus restartKPod kns kpsh kdrst kdscale kspf ksview kpods_check kctx kplogs kjlogs kdesc kevents kgetall kwho_am_i kubeForwardPorts kfwd khelp

local -a commands
commands=(
  'kplogs:View pod logs with options'
  'view_kpod_logs:View specific pod logs'
  'view_kpod_log_latest:View latest pod logs'
  'getKPodStatus:Get pod status details'
  'restartKPod:Restart pod deployment'
  'kpsh:Shell into pod'
  'kpods_check:Check pod status across namespaces'
  'ksview:View service details'
  'kspf:Port forward to service'
  'getKDepls:List deployments'
  'delKDepl:Delete deployment'
  'findAndDelKDepl:Find and delete deployment'
  'kdscale:Scale deployment'
  'kdrst:Restart deployment'
  'kctx:Switch kubernetes context'
  'kns:Switch namespace'
  'kjlogs:View job logs'
  'kdesc:Describe kubernetes resource'
  'kevents:View cluster events'
  'kgetall:Get all resources'
  'kwho_am_i:Show current user context'
  'kubeForwardPorts:Forward multiple ports'
  'kfwd:Port forward with selection'
  'khelp:Show kubernetes command help'
)

_describe 'kubernetes commands' commands